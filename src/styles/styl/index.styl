@import 'node_modules/jeet/styl';
body
  margin: 0;
  padding: 0;
  height: 100%;

.container
  center()

.sidebar
  span(1/6);
  background-color: chocolate;
  color: whitesmoke;
  height: 100vh;
  ul,.sidebar__menu
    font-size: bold;
    li,.sidebar__menu_item
      list-style: none;
      line-height: 1.5em;
      margin-bottom: 3px;
      a
        font-size: larger;
        font-weight: 700;
        color: whitesmoke
        text-decoration: none;
      a:hover
        color: orange;

.content
  span(5/6)

.sidebar
  for i in 1..2
    @media (max-width: 2**(i+7)px)
      width: 100%;
      height: 100%;
